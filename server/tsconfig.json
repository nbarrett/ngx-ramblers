{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "types": [
      "node",
      "@wdio/globals/types"
    ],
    "moduleResolution": "node",
    "outDir": "ts-gen",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021"
  },
  "exclude": [
    "..node_modules",
    "node_modules"
  ],
  "include": [
    "lib/**/*.*",
    "../projects/ngx-ramblers/src/app/models/**/*.*",
    "../projects/ngx-ramblers/src/app/common/**/*.*"
  ]
}
